---
const { data } = Astro.props;
---

<style>
  .sticker-container {
    background: #111;
    width: 200px;
    height: 250px;
    display: flex;
    gap:10px;
    flex-direction: column;
    align-items: center;
    margin: 1rem 0;
    border-color: rgb(255, 255, 255); 
    border-style: solid; 
  }

  .sticker{
    --size: 100px;

    image-rendering: pixelated;
    width: var(--size);
    height: var(--size);
  }

  .category{
    background: darkred;
    color: #fff;
    padding: 8px;
    border-radius: 10px;
  }
</style>

<div class="sticker-container">
  <h1>{data.name}</h1>
  <img class="sticker"src={data.url} alt={data.name} />
  <span class="category">{data.category}</span>
</div>
