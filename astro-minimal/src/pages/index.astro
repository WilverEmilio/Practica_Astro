---
import BaseLayout from "@/layauts/index.astro";
import stickers from "@/data/stickers.json";
import Sticker from "@/components/Sticker.astro";
import AstroHeart from "@/components/AstroHeard.astro";
import manzdevCasual from "@/assets/manzdev-tip.gif";
import "@fontsource-variable/merienda";

---

<style>
 .sticker-colection{
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
 }
 h1{
  font-family: "Merienda Variable";
 }
</style>

<script>
  console.log("Hola, esta es una prueba de Astro");
</script>

<!-- Esto para poder enrutar varias paginas, con el Layaut, es decir un componente que se usa en varias paginas -->
<BaseLayout title = "Página principal", description="Esta es mi primera pagina web con Astro">
  <h1>Astro - Página principal</h1>
  
  <div class="sticker-colection">
  {stickers.map((sticker) => (
    <Sticker data={sticker} />
  ))}
  </div>
  <img src={manzdevCasual.src} alt={"Manzdev Casual" + manzdevCasual.format} width={manzdevCasual.width} height={manzdevCasual.height} /> <!-- Esta es una manera para poder mostrar las imagenes-->
    <!-- <AstroHeart /> -->
</BaseLayout>
